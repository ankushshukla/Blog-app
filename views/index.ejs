<% include partials/header %>


    <div class="ui main text container indexpage">
        <div class="ui huge header" style="text-align: center; font-family: 'Times New Roman', Times, serif; color: white">Restful Blog App</div>
        <% blogs.forEach(function(blog){ %>
            <div class="ui top attached segment" style="border-radius: 10px; background: rgba(0, 0, 0, .8); height: 200px;">
                <div class="ui divided items">


                    <div class="item">
                        <div class="image">
                            <img src="<%= blog.image %>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blogs/<%=blog._id%>" style="color: white;">
                                <%=blog.title%>
                            </a>
                            <div class="meta" style="color: white;">
                                <span>
                                    <%=blog.created.toDateString()%>
                                </span>
                            </div>
                            <div class="description" style="color: white;">
                                <p>
                                    <%-blog.body.substring(0,100)%>...</p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic green button" href="/blogs/<%=blog._id%>">
                                    Read More
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <% }) %>

    </div>

    <% include partials/footer %>